{
    "compilerOptions": {
        "noEmit": true,
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "preserve",
        "moduleResolution": "Bundler",
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": true,
        "noImplicitOverride": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "allowJs": false,
        "noFallthroughCasesInSwitch": false,
        "esModuleInterop": false,
        "paths": {
            "~/src/*": [
                "./src/*"
            ],
            "~/lib/*": [
                "./lib/*"
            ],
            "~/web/*": [
                "./web/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src",
        "web",
    ]
}